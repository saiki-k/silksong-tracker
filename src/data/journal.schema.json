{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Silksong Tracker - Bosses or Journal Category File",
  "type": "object",
  "required": ["$schema", "categories"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "desc", "items"],
        "additionalProperties": false,
        "properties": {
          "label": {
            "type": "string",
            "description": "Visible section title (e.g. 'Main Bosses')"
          },
          "desc": {
            "type": "string",
            "description": "Optional description text shown under the title"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "label",
                "type",
                "act",
                "flag",
                "icon",
                "link",
                "description"
              ],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Internal unique identifier"
                },
                "label": {
                  "type": "string",
                  "description": "Display name of the boss or journal entry"
                },
                "description": {
                  "type": "string"
                },
                "act": {
                  "type": "integer",
                  "enum": [1, 2, 3],
                  "description": "The act number (I, II, III)"
                },
                "flag": {
                  "type": "string",
                  "description": "Name of the save flag used to track completion"
                },
                "icon": {
                  "type": "string",
                  "description": "Path to the icon image (relative or absolute)"
                },
                "link": {
                  "type": "string",
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "description": "Optional link for more info"
                },
                "type": {
                  "type": "string",
                  "enum": ["boss", "journal"],
                  "description": "Defines whether this entry is a boss or journal entry"
                },
                "missable": {
                  "type": "boolean",
                  "description": "Whether this entry can be permanently missed"
                },
                "mode": {
                  "type": "string",
                  "enum": ["normal", "steel"],
                  "description": "Game mode restriction"
                },
                "required": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Required count for completion (optional)"
                }
              }
            }
          }
        }
      }
    }
  }
}
